{
  "path": {
    "root": "/",
    "public" : "/web/",
    "locale": "/lang/",
    "views": "/views/",
    "skills": "/src/",
    "cache": "/cache/"
  },

  "acceptedSignatures": {
    "echo-api.amazon.com": {
      "scheme"   : "https",
      "host"     : "s3.amazonaws.com",
      "pathStart": "^/echo\\.api/.",
      "?port"     : 443
    }
  },

  "namespace": {
    "skills": "\\app\\skills\\"
  },

  "defaults": {
    "locale": "en-US"
  },

  "skills": {},


  "__example_config__": {

    "skills": {
      "skill_id": {
        "name": "Skill Name",
        "invocationName": "skillname",
        "help": {
          "text": "",
          "examples": []
        },

        "intents": {
          "intentName": {
            "intentClass": "someClass",
            "actions": {
              "anAction": ["slot1", "slot2"]
            }
          }
        }
      }
    }

  }

}